<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.bouzekri.atask"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ATaskActivity"
            android:label="@string/title_activity_atask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".SelectTaskActivity" 
            android:label="@string/select_task">
        </activity>
        <activity 
            android:name=".NewTaskActivity" 
            android:label="@string/new_task_title">
        </activity>
    </application>

</manifest>